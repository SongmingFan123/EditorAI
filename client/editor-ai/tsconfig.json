{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      },
    
    ],
    "paths": {
      "@/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@firebase/*": ["app/firebase/*"],
      "@backend/*": ["../../backend/app/*"],
      "@api":["./api/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/admin/page.jsx", "app/context/AuthContext.tsx", "app/components/Header.tsx","app/context/AuthContext.tsx", "app/pages/texteditor/page.jsx"], 

  "exclude": ["node_modules"]
}
